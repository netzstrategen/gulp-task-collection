{
  "name": "@netzstrategen/gulp-task-collection",
  "version": "4.0.0",
  "title": "Gulp task collection",
  "description": "A collection of gulp tasks.",
  "license": "MIT",
  "author": "netzstrategen <hallo@netzstrategen.com>",
  "repository": "netzstrategen/gulp-task-collection",
  "main": "index.js",
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@netzstrategen/twig-asset": "^1.0.0",
    "del": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-css-url-custom-hash": "https://github.com/netzstrategen/gulp-css-url-custom-hash.git",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^7.1.0",
    "gulp-load-plugins": "^2.0.6",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "~3.1.0",
    "gulp-sass-glob": "^1.0.8",
    "gulp-sassvg": "^4.0.1",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-touch-cmd": "0.0.1",
    "gulp-uglify-es": "^0.1.4",
    "minimist": "^1.2.5",
    "node-sass-magic-importer": "^5.2.0",
    "sassdoc": "^2.3.0"
  },
  "browserslist": [
    "last 2 versions",
    "ie 11"
  ],
  "gulpPaths": {
    "destDir": "./dist",
    "fonts": {
      "src": "./assets/fonts/**/*.{eot,svg,ttf,woff,woff2}",
      "dest": "./dist/fonts"
    },
    "icons": {
      "src": "./assets/icons/**/*.svg",
      "dest": "./dist/icons",
      "distFilename": "icons-sprite.svg"
    },
    "images": {
      "inlineSvgs": false,
      "src": "./assets/img/**/*.{jpg,jpeg,png,gif,svg}",
      "dest": "./dist/img"
    },
    "scripts": {
      "src": "./components/**/*.js",
      "dest": "./dist/js"
    },
    "styleguide": "styleguide",
    "styles": {
      "srcDir": "./assets/scss",
      "src": [
        "./assets/scss/**/*.scss",
        "./components/**/*.scss"
      ],
      "dest": "./dist/css"
    },
    "templates": "./templates/**/*.twig"
  }
}
